/* pages/details/details.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.box {
  width: 480rpx;
  height: 480rpx;
  /* background-color: gold; */
  display: block;
}

.box view {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 230rpx;
  height: 230rpx;
  padding: 0;
  float: left;
}

.recoverable-garbage {
  background-color: rgb(33, 82, 135);
  border-radius: 110rpx 110rpx 38rpx 110rpx;
  margin: 0 10rpx 10rpx 0;
}

.harmful-waste {
  background-color: rgb(234, 62, 48);
  border-radius: 110rpx 110rpx 110rpx 38rpx;
  margin: 0 0 10rpx 10rpx;
}

.kitchen-waste {
  background-color: rgb(5, 130, 64);
  border-radius: 110rpx 38rpx 110rpx 110rpx;
  margin: 10rpx 10rpx 0 0;
}

.other-waste {
  background-color: rgb(46, 44, 42);
  border-radius: 38rpx 110rpx 110rpx 110rpx;
  margin: 10rpx 0 0 10rpx;
}

.garbage-icon {
  width: 125rpx;
  height: 125rpx;
  margin-top: 30rpx;
}

.garbage-text {
  margin-top: 30rpx;
  color: white;
}

.news-box {
  margin-top: 0;
  width: 720rpx;
  height: 400rpx;
  background-color: rgb(18, 214, 214);
}

.get-user-location {
  width: 706rpx;
  height: 40rpx;
  padding: 4rpx;
  display: flex;
  flex-direction: row;
  border: 2rpx double rgb(128, 125, 125);
  margin-top: 60rpx;

}

.img-size {
  height: 38rpx;
  width: 38rpx;
  line-height: 28rpx;

}

.get-user-location text{
  color: rgb(34, 169, 214);
  line-height: 40rpx;

}